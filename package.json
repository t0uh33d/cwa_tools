{
  "name": "cwa-tools",
  "displayName": "CWA Tools",
  "description": "Extenstion to work with Flutter CWA",
  "version": "0.0.3",
  "publisher": "CodewaveTechnologies",
  "repository": {
    "type": "git",
    "url": "https://github.com/t0uh33d/cwa-tools.git"
  },
  "engines": {
    "vscode": "^1.50.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./out/extension.js",
  "activationEvents": [
    "onCommand:cwaTools.addToAppStrings"
  ],
  "contributes": {
    "commands": [
      {
        "command": "cwa-tools.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "cwaTools.addToAppStrings",
        "title": "Add to App Strings"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "cwaTools.addToAppStrings",
          "when": "editorHasSelection"
        }
      ]
    },
    "configuration": {
      "type": "object",
      "title": "CWA Tools Configuration",
      "properties": {
        "cwaTools.appStringsPath": {
          "type": "string",
          "default": "lib/app_strings.dart",
          "description": "Path to the AppStrings class file."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "files": [
    "out",
    "images",
    "src",
    "package.json",
    "README.md",
    "LICENSE"
  ],
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/vscode": "^1.50.0",
    "@typescript-eslint/eslint-plugin": "^7.7.1",
    "@typescript-eslint/parser": "^7.7.1",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.3.9",
    "eslint": "^8.57.0",
    "typescript": "^5.4.5"
  }
}